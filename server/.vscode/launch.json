{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "unix",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server.elf",
            "preLaunchTask": "server",
            "args": [
                "-p 64999",
                "-l/tmp/mysmtp/",
                "-c/tmp/mysmtp_client/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}